---
import MapPinIcon from "../components/icons/MapPinIcon.jsx";
import SendIcon from "../components/icons/SendIcon.jsx";
import PhoneIcon from "../components/icons/PhoneIcon.jsx";
import EmailIcon from "../components/icons/MailIcon.jsx";
import GlobeIcon from "../components/icons/GlobeIcon.jsx";
import ClockIcon from "../components/icons/ClockIcon.jsx";
import CheckMarkIcon from "../components/icons/CheckMarkIcon.jsx";
import CircleWithXIcon from "../components/icons/CircleWithX.jsx";
import PackageIcon from "../components/icons/PackageIcon.jsx";
import FaxIcon from "../components/icons/FaxIcon.jsx";
---

<!DOCTYPE html>
<html lang="en">
<meta charset="UTF-8">
<title>Foodbank Page</title>
<meta name="viewport" content="width=device-width,initial-scale=1">

<style>
    * {
        padding: 0;
        box-sizing: border-box;
    } 

    body {
        background-color: #F5F5F5;;
    }

    .foodbank-page {
        display: flex;
        flex-direction: column;
    }

    .foodbank-information {
        display: flex;
        flex-direction: column;
        margin: 1rem;
    }

    .foodbank-top {
        display: flex;
        align-items: center;
        gap: 3rem;
   
    }
    .open-widget {
    display: inline-block;    
    padding: .5rem;   
    border-radius: 1rem;       
    text-align: center;
    user-select: none;          
    background-color: #2E8B57; 
    color: white;
    border: 1px solid #276b47;
    }

    .address-information {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .opening-times, .contact-information {
        display: flex;
        flex-direction: column;
        flex: 1;
        margin: 1rem;
        border: 1px solid #ccc;
        border-radius: 1rem;
        background-color: white;
        
        
    }


    .opening-times-header {
        display: flex;
        align-items: center;
        margin-left: 1rem;
        gap: 0.5rem;

    }

    .opening-times-values {

        display: flex;
        flex-direction: column;
        gap: 0.5rem; 
        margin-left: .5rem;
    }

     .opening-times-header svg {
        color: SeaGreen;
     }

     .contact-information-header svg {
        color: SeaGreen;
     }
    
    .opening-times-values .day-and-time:last-child {
        border-bottom: none;
        padding-bottom: 1.5rem;

    }



    .day-and-time {
        display: flex;
        justify-content: space-between;
        padding: .75rem; 
        border-bottom: 1px solid #BEBEBE;
    
    

    }

    dl, dt, dd {
    margin: 0;
    padding: 0;
    }

    .second-row {
        display: flex;
        justify-content: space-between;

    }

    .available-items-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-left: 2rem;

    }

    .available-items-header svg {
        color: SeaGreen;
    }

    .available-items {
        margin: 1rem;
        flex: 1;
        border: 1px solid #BEBEBE;
        border-radius: .5rem;
        background-color: white;

    }

     .food-item-widget {
        background-color: #AAF0D1;
        color: #2E8B57;
        padding: .5rem;
        border: none;
        border-radius: 1rem;
        display: inline-block; 
        user-select: none; 
        
    }




    .services-offered {
        margin: 1rem;
        border: 1px solid #BEBEBE;
        border-radius: .5rem;
        background-color: white;

    }


    .food-category-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 15%));
        grid-auto-rows: minmax(150px, auto);
        gap: 16px;         
        margin: 1.5rem;              
  
    }

    .item {
        gap: .5rem;
        border: 1px solid;
        border-radius: 1rem;
        overflow: hidden;
        overflow-wrap: anywhere;
        word-break: break-word;
  
    }



    .food-category-valid {
        border-color: LightSeaGreen;
        background-color:  #ECFAF6;
   
    }

    .food-category-invalid {
        background-color:  #f1ebe8;
        border-color: #BEBEBE;
    }

    .food-category-valid, .food-category-invalid {
        padding: 1rem;
        
    }

    .food-category-valid .food-category-row svg {
        color: SeaGreen;
    }

    .food-category-invalid .food-category-row svg {
        color: #696969;
    }


    .button-row {
        display: flex;
        gap: .5rem;
    }

    .button-row button {
        display: flex;
        align-items: center;
        border-radius: .5rem;
        padding: .6rem;
        gap: 0.5rem;
    

    }

    .directions-btn {
        background-color: #2E8B57;
        color: white;
        border: none;
    }

    .call-btn, .email-btn, .website-btn {
        border: 1px solid #BEBEBE;
    }


    .contact-information-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-left: 1rem;
    }

    .contact-information-list {
        margin: 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .icon-row {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .contact-row dd {
        margin-left: 2rem;
    }

    .food-category-row {
        display: flex;
        margin-left: .5rem;
        align-items: center;
        gap: .5rem;
        margin-bottom: .5rem;
    }

    .inner-service-offered-box{
        margin: 2rem;
    }

    .services-boxes {
        display: flex;
        gap: 1rem;
    }

    .service-widget {
        background-color: #f1ebe8;
        border-radius: 1rem;
        padding: .5rem;
        user-select: none; 
    }

    .food-items {
        display: flex;
        gap: .5rem;
        flex-wrap: wrap;
        max-height: 150px;
        overflow-y: auto;
    }

    .empty-food-item-widget {
        color: #696969; 
        padding: 0.5rem;
        border-radius: 1rem; 
        display: inline-block;
        user-select: none;  
    }

    .out-of-stock {
    color: #696969; 
    }

    .contact-information-fax-and-phone{
        display: flex;
        


    }

    .phone-contact {
        padding-right: 2rem;
        margin-right: 2rem;
        border-right: 1px solid #ccc;   
    }






</style>

<body>
    <div class="foodbank-page">

        <div class="foodbank-information">
            <div class="foodbank-top">
                <h1 class="foodbank-name">Community Food Pantry</h1>
                <h1 class="foodbank-id">ID: 1</h1>
                
            </div>


            <div class="address-information">
                <MapPinIcon client:load />
                <span>123 Main Street, Downtown, NY 10001</span>
                </div>

            <p class="foodbank-description">Serving our community since 1985, we provide nutritious food to families in need. Our volunteers work tirelessly to ensure no one goes hungry.</p>

            <div class="button-row">

                <button class="directions-btn" type="button"><SendIcon client:load size={16} /> <span>Get Directions</span></button>
                <button class="call-btn" type="button"><PhoneIcon client:load size={16} /> <span>Call</span></button>
                <button class="email-btn" type="button"><EmailIcon client:load size={16} /> <span>Email</span></button>
                <button class="website-btn" type="button"><GlobeIcon client:load size={16} /> <span>Website</span></button>

            </div>

        </div>

        <div class="second-row">
        <div class="opening-times">
            <div class="opening-times-header"> 
                        <ClockIcon client:load size={24} />
                        <h2>Opening Times</h2>
                        
            </div>
            <div class="opening-times-values">
            <div class="day-and-time">
                <span class="day">Monday</span>
                <span class="time">9:00AM - 5:00PM</span>
            </div>
            <div class="day-and-time">
                <span class="day">Tuesday</span>
                <span class="time">9:00AM - 5:00PM</span>
            </div>
            <div class="day-and-time">
                <span class="day">Wednesday</span>
                <span class="time">9:00AM - 5:00PM</span>
            </div>
            <div class="day-and-time">
                <span class="day">Thursday</span>
                <span class="time">9:00AM - 5:00PM</span>
            </div>
            <div class="day-and-time">
                <span class="day">Friday</span>
                <span class="time">9:00AM - 5:00PM</span>
            </div>
            <div class="day-and-time">
                <span class="day">Saturday</span>
                <span class="time">9:00AM - 5:00PM</span>
            </div>
            <div class="day-and-time">
                <span class="day">Sunday</span>
                <span class="time">Closed</span>
            </div>            
        </div>
        </div>


        <div class="contact-information"> 
        
            <div class="contact-information-header">
                <PhoneIcon client:load size={24} />
                <h2>Contact Information</h2>
            </div>
            <dl class="contact-information-list">
                <div class="address-contact contact-row">
                    <div class="icon-row">
                        <MapPinIcon /> 
                        <dt> Address</dt>
                    </div>
                    <dd>123 Main Street Downtown, NY, United States 10001</dd>

                </div>

            <div class="contact-information-fax-and-phone">
                <div class="phone-contact contact-row">
                    <div class="icon-row">
                        <PhoneIcon />
                        <dt>Phone</dt>
                    </div>
                        <dd><a href="tel:+15551234567">(555) 123-4567</a></dd>
                </div>

                <div class="fax-contact contact-row">
                    <div class="icon-row">
                        <FaxIcon client:load size={16} />
                        <dt>Fax</dt>
                    </div>
                        <dd>+1 (555) 123-4567</dd>
                </div>
            </div>

                <div class="email-contact contact-row">
                    <div class="icon-row">
                        <EmailIcon />
                        <dt>Email</dt>
                    </div>
                        <dd>
                         <a href="mailto:info@example.com">info@communityfoodpantry.org</a>
                        </dd>
                </div>

                <div class="website-contact contact-row">
                    <div class="icon-row">
                        <GlobeIcon /> 
                        <dt>Website</dt>
                    </div>
                    <dd><a href="https://communityfoodpantry.org" target="_blank" rel="noopener noreferrer">https://communityfoodpantry.org
                    </a>
                    </dd>
                    
                </div>

            </dl>
        </div>
    </div>


        <div class="available-items">

    <h2 class="available-items-header">
        <ClockIcon client:load size={24} /> Available Items by Category
    </h2>


            <div class="food-category-grid">

                <div class="food-category-valid item">
                    <div class="food-category-row"><CheckMarkIcon client:load size={24}/> <span>Canned Goods</span></div>
                    <div class="food-items">
                        <div class="food-item-widget">Beans</div>
                        <div class="food-item-widget">Vegetables</div>
                        <div class="food-item-widget">Soup</div>
                        <div class="food-item-widget">Fruit</div>

                    </div>

    
                </div>

                
                <div class="food-category-invalid item">
                    <div class="food-category-row"><CircleWithXIcon client:load size={24}/> <span>Fresh Produce</span></div>

                    <div class="empty-food-items">
                        <div class="empty-food-item-widget">Beans</div>
                        <div class="empty-food-item-widget">Vegetables</div>
                        <div class="empty-food-item-widget">Soup</div>
                        <div class="empty-food-item-widget">Fruit</div>

                        <p class="out-of-stock">Currently out of stock</p>

                    </div>
                </div>
                
                
            </div>

        </div>

        <div class="services-offered">
            <div class="inner-service-offered-box">
            <h2 class="services-offered-header">Services Offered</h2>

            <div class="services-boxes">
                <div class="service-widget"> 
                    Food Boxes
                </div>

                <div class="service-widget"> 
                    Fresh Produce
                </div>

            </div>
            </div>
        
        </div>

    </div>


</body>
</html>