---
import Layout from "../layouts/Layout.astro";
import FoodBankCard from "../components/FoodBankCard.astro";
import { BsArrowLeft } from "react-icons/bs";
const foodBanks = [
  {
    name: "Community Food Pantry",
    address: "123 Main Street, Downtown",
    schedule: "Mon-Fri: 9am-5pm, Sat: 10am-2pm",
    phone: "555-0123",
    isOpen: true,
    coordinates: { lat: 40.7128, lng: -74.006 },
  },
  {
    name: "Hope Food Bank",
    address: "456 Oak Avenue, Westside",
    schedule: "Tue-Sat: 10am-6pm",
    phone: "555-0456",
    isOpen: true,
    coordinates: { lat: 40.725, lng: -74.015 },
  },
  {
    name: "Neighborhood Assistance Center",
    address: "789 Elm Drive, Northgate",
    schedule: "Mon-Wed-Fri: 8am-4pm",
    phone: "555-0789",
    isOpen: false,
    coordinates: { lat: 40.738, lng: -73.992 },
  },
  {
    name: "Unity Food Distribution",
    address: "321 Pine Street, Eastview",
    schedule: "Daily: 11am-7pm",
    phone: "555-0321",
    isOpen: true,
    coordinates: { lat: 40.711, lng: -73.981 },
  },
  {
    name: "Grace Community Kitchen",
    address: "654 Maple Lane, Southend",
    schedule: "Mon-Thu: 7am-3pm",
    phone: "555-0654",
    isOpen: false,
    coordinates: { lat: 40.695, lng: -74.02 },
  },
]; /*to be able to render something*/
---

<Layout>
  <header>
    <button>
      <BsArrowLeft />Back to Search
    </button>
    <span>{foodBanks.length} locations found</span>
  </header>
  <main>
    <section class="map-section">
      <img src="/mockup-map.PNG" alt="Map placeholder" />
    </section>
    <section class="results-section">
      <h1>Food Banks</h1>
      {
        foodBanks.map((foodBank) => (
          <FoodBankCard
            name={foodBank.name}
            address={foodBank.address}
            schedule={foodBank.schedule}
            phone={foodBank.phone}
            isOpen={foodBank.isOpen}
            coordinates={foodBank.coordinates}
          />
        ))
      }
    </section>
  </main>
</Layout>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    border-bottom: 1px solid #e5e7eb;
  }

  header button {
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0;
    font-family: inherit;
    font-size: inherit;
    color: inherit;
  }

  header span {
    color: #6b7280;
    font-size: 0.8rem;
  }

  main {
    display: flex;
    flex-direction: column;
  }

  .results-section h1 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
    padding: 1rem 1rem 0.25rem 1rem;
  }

  .map-section img {
    width: 100%;
    height: auto;
  }

  @media (min-width: 48rem) {
    main {
      flex-direction: row;
    }

    .map-section {
      width: 65%;
    }

    .results-section {
      width: 35%;
    }
  }
</style>
