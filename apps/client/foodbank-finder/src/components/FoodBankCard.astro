---
import StatusBadge from "./StatusBadge.astro";
import { BsTelephone, BsGeoAlt, BsCursor, BsClock } from "react-icons/bs";
const { name, address, schedule, phone, isOpen, coordinates } = Astro.props;
---

<article class="card">
  <header class="card-header">
    <h2>{name}</h2>
    <StatusBadge isOpen={isOpen} />
  </header>

  <span><BsGeoAlt />{address}</span>
  <span><BsClock />{schedule}</span>

  <footer class="button-group">
    <button data-lat={coordinates.lat} data-lng={coordinates.lng}
      ><BsCursor />Directions</button
    >
    <button data-phone={phone}><BsTelephone />Call</button>
  </footer>
</article>

<style>
  .card {
    display: flex;
    padding: 1rem;
    margin: 1rem;
    flex-direction: column;
    border: 1px solid #eaeaea;
    border-radius: 0.5rem;
    gap: 0.5rem;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .card h2 {
    margin: 0;
    font-size: 1.2rem;
  }

  .card span {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .button-group {
    display: flex;
    gap: 0.5rem;
  }

  .button-group button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 1rem;
    border: 1px solid #ddd;
    border-radius: 0.25rem;
    cursor: pointer;
    flex: 1;
    justify-content: center;
  }

  .button-group button:first-child {
    background-color: green;
    color: white;
    border: none;
  }
</style>
